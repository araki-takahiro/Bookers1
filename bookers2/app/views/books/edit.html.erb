<% if @book.errors.any? %>
<div id="error_explanation">
	<h2><%= @book.errors.count %>error</h2>
			<ul><% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<%end%>
			</ul>
		</div>
	<%end%>
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<ul><% @book.errors.full_messages.each do |m| %>
			<li><%= m %></li>
			<%end%>
		</ul>
	<%end%>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit "Update Book" %>
<%end%>
<%= link_to "Show",book_path(@book) %>
<%= link_to "Back",books_path %>