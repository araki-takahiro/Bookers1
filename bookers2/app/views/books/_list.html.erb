<% if book.errors.any? %>
<div id="error_explanation">
	<h2><%= book.errors.count %>error</h2>
			<ul><% book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<%end%>
			</ul>
		</div>
	<%end%>

