<div class="container">
	<div class="row">
		<div class="col-md-4">
<%= render 'books/list',user:@user,book:@book %>
</div>

<div class="col-md-8">
<h1>Books</h1>
<table class="table table-striped">
<% @books.each do |book| %>
<tbody>
	<tr>
		<td>
<%= attachment_image_tag book.user,:profile_image,:fill,60,60,format:'jpg',fallback:"no_image.jpg" %>
</td>
<td><%= link_to book.title,book_path(book) %></td>
<td><%= book.body %></td>
</tr>
</tbody>
<%end%>
</table>
</div>
</div>
</div>

