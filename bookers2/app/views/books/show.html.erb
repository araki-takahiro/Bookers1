<div class="container">
	<div class="row">
		<div class="col-md-4">
<%= render 'books/list',book: @book,user: @user %>
</div>
<div class="col-md-8">
<h1>Book detail</h1>
<% if flash[:notice] %>
<%= flash[:notice] %>
<%end%>
<%= attachment_image_tag @book.user,:profile_image,:fill,60,60,format:'jpg',fallback:"no_image.jpg"%>
<%= @book.title %>
<%=@book.body%>
<div>
	<%= link_to @book.user.name,user_path(@user) %>
	</div>
<% if @book.user == current_user %>
<%= link_to "Edit",edit_book_path(@book) %>
<%= link_to "Destroy",book_path(@book),method: :delete %>
<%end%>
</div>
</div>
</div>