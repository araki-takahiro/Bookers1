<h1>User info</h1>
<div>
	<%= attachment_image_tag user,:profile_image,:fill,60,60,format:'jpg',fallback:"no_image.jpg" %>
</div>
	<h4>name</h4>
	<%= link_to user.name,user_path(user) %>
	<h4>introduction</h4>
	<%= user.introduction %>
	<div>
	<button class="btn btn-default">
	<span><%= link_to "",edit_user_path(user),class: "glyphicon glyphicon-wrench" %>
	</span>
</button>
</div>

<h1>New book</h1>
<%= form_for(book) do |f| %>
	<% if book.errors.any? %>
		<ul><%book.errors.full_messages.each do |m|%>
			<li><%= m %></li>
			<%end%>
		</ul>
	<%end%>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit "Create Book" %>
<%end%>