<div class="container">
	<div class="row">
		<div class="col-md-4">
<%= render 'users/list',user:@user,book:@book %>
</div>

<div class="col-md-8">
<h1>Users</h1>
<table class="table table-striped">
<% @users.each do |user| %>
<tbody>
	<tr>
	<td>
	<%= attachment_image_tag user,:profile_image,:fill,60,60,format:'jpg',fallback:"no_image.jpg" %>
</td>
	<td><%= user.name %></td>
	<td><%= link_to 'show',user_path(user) %></td>
</tr>
</tbody>
	<%end%>
</table>
</div>
</div>
</div>
